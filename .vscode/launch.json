    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "(Linux) Launch",
            "program": "${workspaceFolder}/bin/small-world",
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/tinier-tactics.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Windows) Odin-Debug-Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "D:/Repository/Odin/odin.exe",
            "args": [
                "run",
                "src",
                "-out:bin/tinier-tactics.exe",
                "-debug",
                "-strict-style",
                "-vet",
                "-collection:lib=./lib"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        }
    ]
